<script>
    var ctx = $('#myChart')
    var keepRate = $('#myChart').text()
    keepRate = keepRate.split(',')
    keepRate = keepRate.map(item => Number(item))
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP'
                , 'OCT', 'NOV', 'DEC'],
            datasets: [{
                label: '2020留存率變化',
                data: keepRate
            }]
        }
    });
    $("#myChart").hide()
    $("#detailsBtn").click(function () {
        $("#list").toggleClass("w-50")
        $("#myChart").toggle()
    })    
</script>

