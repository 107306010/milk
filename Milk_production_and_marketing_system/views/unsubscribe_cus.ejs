<!DOCTYPE html>
<html lang="en">
<style>
#emailbox{
    width: 50%;
    height: 450px;
}
#chkbox{
    width: 50%;
} 
</style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body>
    <h1>不續訂顧客寄信功能</h1>
    <div class="container d-flex">
        <div id="emailbox" class=" overflow-auto">
            <%- include('email_table' , {coupon : coupon})%>
        </div>
        <div id="chkbox" class=" d-flex flex-wrap align-content-center justify-content-center p-5">
            <div class="w-100"><input id="selAll" type="checkbox"><label>全選</label></div>
            <div class="w-100"><input id="month" type="checkbox"><label>訂閱一個月顧客以下</label></div>
            <div class="w-100"><input id="season" type="checkbox"><label>訂閱一個月~一季顧客</label></div>
            <div class="w-100"><input id="half" type="checkbox"><label>訂閱一季~半年顧客</label></div>
            <div class="w-100"><input id="year" type="checkbox"><label>訂閱半年~一年顧客</label></div>
            <div class="w-100"><input id="over" type="checkbox"><label>訂閱一年以上顧客</label></div>
            <!-- Button trigger modal -->
            <button type="button" id="sendBtn"class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
               寄送email
            </button>
            
        </div>
    </div>
    <!-- Modal -->
    <%- include('email_comfirm_page')%>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
    integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
    integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
    crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    //選取設定
        $("#selAll").change(function () {
            //勾選全選
            if (this.checked) {
                $("table tr th input[type=checkbox]").prop("checked", true);
            } else {
                $("table tr th input[type=checkbox]").prop("checked", false);
            }
        });
        $("#month").change(function () {
            if (this.checked) {
                $(".t1 input[type=checkbox]").prop("checked", true);
            } else {
                $(".t1 input[type=checkbox]").prop("checked", false);
            }
        });
        $("#season").change(function () {
                if (this.checked) {
                    $(".t2 input[type=checkbox]").prop("checked", true);
                } else {
                    $(".t2 input[type=checkbox]").prop("checked", false);
                }
            });
        $("#half").change(function () {
                if (this.checked) {
                    $(".t3 input[type=checkbox]").prop("checked", true);
                } else {
                    $(".t3 input[type=checkbox]").prop("checked", false);
                }
            });
        $("#year").change(function () {
                if (this.checked) {
                    $(".t4 input[type=checkbox]").prop("checked", true);
                } else {
                    $(".t4 input[type=checkbox]").prop("checked", false);
                }
            });
        $("#over").change(function () {
                if (this.checked) {
                    $(".t5 input[type=checkbox]").prop("checked", true);
                } else {
                    $(".t5 input[type=checkbox]").prop("checked", false);
                }
            });
    </script>
</html>