<!DOCTYPE html>
<html lang="en">
<style>
    #emailbox {
        width: 50%;
        height: 450px;
    }

    #chkbox {
        width: 50%;
    }
</style>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <table id="list" class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">顧客ID</th>
                <th scope="col">顧客姓名</th>
                <th scope="col">信箱</th>
                <th scope="col">累積訂購月份</th>
            </tr>
        </thead>
        <tbody>
            <%for (let i=0; i < data.length; i++){%>
                <tr>
                <%if (data[i].cumulative_month < 1){%>
                    <th class="t1" scope="row" >
                        <input type="checkbox" value="<%=data[i].email%>">
                    </th>
                    <td>
                        <%=data[i].cust_id%>
                    </td>
                    <td>
                        <%=data[i].name%>
                    </td>
                    <td>
                        <%=data[i].email%>
                    </td>
                    <td>
                        <%=data[i].cumulative_month%>
                    </td>
                    <td class="coup coupon1" style="display: none;">A</td>
                <%}else if( 1 <=data[i].cumulative_month && data[i].cumulative_month < 3){%>
                    <th class="t2" scope="row">
                        <input type="checkbox" value="<%=data[i].email%>">
                   </th>
                    <td>
                        <%=data[i].cust_id%>
                    </td>
                    <td>
                        <%=data[i].name%>
                    </td>
                    <td>
                        <%=data[i].email%>
                    </td>
                    <td>
                        <%=data[i].cumulative_month%>
                    </td>
                    <td class="coup coupon1" style="display: none;">A</td>
                    <%}else if( 3 <=data[i].cumulative_month && data[i].cumulative_month < 6){%>
                        <th class="t3" scope="row">
                            <input type="checkbox" value="<%=data[i].email%>">
                        </th>
                        <td>
                            <%=data[i].cust_id%>
                        </td>
                        <td>
                            <%=data[i].name%>
                        </td>
                        <td>
                            <%=data[i].email%>
                        </td>
                        <td>
                            <%=data[i].cumulative_month%>
                        </td>
                        <td class="coup coupon2" style="display: none;"></td>
                    <%}else if( 6 <=data[i].cumulative_month && data[i].cumulative_month < 12){%>
                        <th class="t4" scope="row">
                            <input type="checkbox" value="<%=data[i].email%>">
                        </th>
                        <td>
                            <%=data[i].cust_id%>
                        </td>
                        <td>
                            <%=data[i].name%>
                        </td>
                        <td>
                            <%=data[i].email%>
                        </td>
                        <td>
                            <%=data[i].cumulative_month%>
                        </td>
                        <td class="coup coupon3" style="display: none;"></td>
                    <%}else{%>
                        <th class="t5" scope="row">
                            <input type="checkbox" value="<%=data[i].email%>">
                        </th>
                        <td>
                            <%=data[i].cust_id%>
                        </td>
                        <td>
                            <%=data[i].name%>
                        </td>
                        <td>
                            <%=data[i].email%>
                        </td>
                        <td>
                            <%=data[i].cumulative_month%>
                        </td>
                        <td class="coup coupon4" style="display: none;"></td>
                    <%}%>
                </tr>
            <%}%>
        </tbody>
    </table>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
    integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
    integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
    crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    
    let coupon = '<%-JSON.stringify(coupon)%>'
    coupon = JSON.parse(coupon)
    $(document).ready(function () {
        if (coupon[0].season_coupon_id == 1) {
            $(".coupon2").text("A")
        }else{
            $(".coupon2").text("B")
        }
        if (coupon[0].half_coupon_id == 1) {
            $(".coupon3").text("A")
        }else if(coupon[0].half_coupon_id == 2){
            $(".coupon3").text("B")
        }else{
            $(".coupon3").text("C")
        }
        if (coupon[0].year_coupon_id == 1) {
            $(".coupon4").text("A")
        } else if (coupon[0].year_coupon_id == 2) {
            $(".coupon4").text("B")
        } else if (coupon[0].year_coupon_id == 3){
            $(".coupon4").text("C")
        }else{
            $(".coupon4").text("D")
        }
        
    })
    
</script>

</html>