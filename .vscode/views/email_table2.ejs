                </tr>
            </thead>
            <tbody>
                <!-- 選擇沒有續訂的顧客 -->
                <%for (let i=0; i < data.length; i++){%>
                    <tr>

                        <th class="t1" scope="row">

                        </th>
                        <td>
                            <%=data[i].cust_id%>
                        </td>
                        <td>
                            <%=data[i].name%>
                        </td>
                        <td class='email'>
                            <%=data[i].email%>
                        </td>



                    </tr>
                    <%}%>
            </tbody>
        </table>
    </div>
</body>
