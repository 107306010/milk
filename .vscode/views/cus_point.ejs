<!-- 單次訂購顧客寄送優惠券介面 -->

<body>
        <%- include('navbar') %>
                <h2 style="margin: 5px;" align="center" valign="center">顧客點數與折抵金額換算</h2>
                <div class="d-flex justify-content-center ">
                        <div id="pointbox" class=" overflow-auto">

                                <table id="list" class="table" align="center">
                                        <thead>
                                                <tr>
                                                        <th scope="col"></th>
                                                        <th scope="col">顧客ID</th>
                                                        <th scope="col">顧客姓名</th>
                                                        <th scope="col">累積點數</th>
                                                        <th scope="col">可折價金額</th>
                                                        <!-- <th scope="col">累積訂購月份</th> -->
                                                </tr>
                                        </thead>
                                        <tbody>
                                                <!-- 選擇沒有續訂的顧客 -->
                                                <%for (let i=0; i < data.length; i++){%>
                                                        <tr>

                                                                <th class="t1" scope="row">

                                                                </th>
                                                                <td>
                                                                        <%=data[i].cust_id%>
                                                                </td>
                                                                <td>
                                                                        <%=data[i].name%>
                                                                </td>
                                                                <td>
                                                                        <%=data[i].cumulative_points%>
                                                                </td>
                                                                <td>
                                                                        <%=data[i].cumulative_points
                                                                                /point[0].points*point[0].dollars%>
                                                                </td>


                                                        </tr>
                                                        <%}%>
                                        </tbody>
                                </table>
                        </div>

                </div>
                <div class="d-flex justify-content-center ">
                        <button class="btn btn-primary" onclick="location.href='pointSetting'">返回</button>
                </div>



</body>
