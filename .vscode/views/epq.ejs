    <%- include('navbar_production') %>
        <h1 align="center" valign="center" style="padding:20px;">主排程規劃</h1>
        <div class="d-flex justify-content-center ">
            <form method="post" accept-charset="utf-8">
                <title>匯出主排程</title>
                <div class="mb-2">
                    <label>產品</label>
                    <select class="form-control d-inline" style="width:150px" name="product" id="s1">
