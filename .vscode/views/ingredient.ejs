<body>
    <%- include('navbar_production') %>
        <h1 align="center" valign="center" style="padding:20px;">物料訂購時間與數量</h1>
        <div id="box" class="d-flex pt-1 container text-center mt-3">
            <table id="list" class="table">
                <thead>
                    <tr>
                        <th scope="col">牛奶</th>
                        <th scope="col">目前庫存</th>
                        <th scope="col">建議訂購量</th>
                        <th scope="col">建議訂購日期</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">牛奶</th>
                        <td id="milkStorage">
                            <%=milk[0] /1000%>公升
                        </td>
                        <td name="millkOrderAmount">
                            <%=milk[1] /1000%>公升
                        </td>
                        <td id="millkOrderDate">
                            <%=milk[2]%>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">家庭號瓶子</th>
                        <td id="homeBottleStorage">
                            <%=bottle_home[0]%>瓶
                        </td>
                        <td id="homeBottleOrderAmount">
                            <%=bottle_home[1]%>瓶
                        </td>
                        <td id="homeBottleOrderDate">
                            <%=bottle_home[2]%>
                        </td>

                    </tr>
                    <tr>
                        <th scope="row">250ml瓶子</th>
                        <td id="_250mlBottleStorage">
                            <%=bottle_250ml[0]%>瓶
                        </td>
                        <td id="_250mlBottleOrderAmount">
                            <%=bottle_250ml[1]%>瓶
                        </td>
                        <td id="_250mlBottleorderDate">
                            <%=bottle_250ml[2]%>
                        </td>

                    </tr>

                </tbody>
            </table>

        </div>
        <div class=" d-flex justify-content-center">
            <form class='d-flex d-inline' name="sendEmail" method="POST" accept-charset="utf-8" style="padding:30px;">
                <label style="padding:10px" for="email">寄出提醒信</label>
                <input class="form-control d-inline" style="width:250px;margin: 5px;" type="text" id="email"
                    name="email">
                <input style="margin: 5px;" class="btn btn-primary" type="submit" value="寄送">
            </form>
        </div>


</body>
